\RequirePackage{pdfcomment}
\RequirePackage{color}

\providecommand{\DIFadd}[1]{\pdfmarkupcomment[author = Teraz, color = blue, opacity = 0.25]
	{\relax\ifmmode\else[+]\fi}{\luaescapestring{#1}}\relax\ifmmode\else~\fi{\protect\color{blue}#1}}

\providecommand{\DIFdel}[1]{\pdfmarkupcomment[author = Dawniej, color = red, opacity = 0.25]
	{\relax\ifmmode\else[-]\fi}{\luaescapestring{#1}}{\relax\ifmmode\protect\color{red}#1\else\fi}}

\providecommand{\DIFaddbegin}{\ignorespaces}
\providecommand{\DIFaddend}{\ignorespaces}
\providecommand{\DIFdelbegin}{\ignorespaces}
\providecommand{\DIFdelend}{\ignorespaces}
\providecommand{\DIFmodbegin}{\ignorespaces}
\providecommand{\DIFmodend}{\ignorespaces}

\providecommand{\DIFaddFL}[1]{\DIFadd{#1}}
\providecommand{\DIFdelFL}[1]{\DIFdel{#1}}
\providecommand{\DIFaddbeginFL}{\ignorespaces}
\providecommand{\DIFaddendFL}{\ignorespaces}
\providecommand{\DIFdelbeginFL}{\ignorespaces}
\providecommand{\DIFdelendFL}{\ignorespaces}
